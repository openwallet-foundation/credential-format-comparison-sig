{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/openwallet-foundation/credential-format-comparison-sig/tree/main/viewer/viewer/src/schemas/defs.json",
  "type": ["object"],
  "definitions": {
    "Filter": {
      "type": ["object", "boolean"],
      "properties": {
        "Value": {
          "type": "boolean",
          "description": "Allows to filter this property"
        },
        "Description": {
          "type": "string",
          "description": "Give more information about this property"
        }
      },
      "additionalProperties": false,
      "required": ["Value"]
    },
    "Implementation-Support": {
      "type": "string",
      "description": "How complex is the implementation? Which/How many useful software libraries available?"
    },
    "IPR-Policy": {
      "type": "string",
      "description": "What is the policy regarding intellectual properties associated with this technology?"
    },
    "Specification": {
      "type": "string",
      "description": "Where is it specified?"
    },
    "Standardization": {
      "type": "string",
      "description": "Under which Standardization Body and which standards track/status is it standardized?"
    },
    "Technology-Readiness-Level": {
      "type": "number",
      "description": "According to NASA-Scheme (http://www.artemisinnovation.com/images/TRL_White_Paper_2004-Edited.pdf)"
    }
  }
}
